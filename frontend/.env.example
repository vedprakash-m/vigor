# Vigor Frontend - Environment Variables Template
# Copy this file to .env.local and fill in the values

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Local Development (Azure Functions Core Tools runs on port 7071)
# Note: API paths already include /api prefix, so base URL should NOT include /api
VITE_API_URL=http://localhost:7071

# Production (Azure Functions)
# VITE_API_URL=https://vigor-functions.azurewebsites.net

# =============================================================================
# MICROSOFT ENTRA ID AUTHENTICATION
# =============================================================================
VITE_AZURE_CLIENT_ID=your-app-registration-client-id
VITE_AZURE_TENANT_ID=common
VITE_AZURE_AUTHORITY=https://login.microsoftonline.com/common

# Redirect URI (set based on your deployment)
# Local: http://localhost:5173
# Production: https://vigor.vedprakash.net
VITE_REDIRECT_URI=http://localhost:5173

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_PWA=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_ENABLE_OFFLINE_MODE=false

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
VITE_APP_NAME=Vigor
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VITE_APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxx
