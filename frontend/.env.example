# Vigor Frontend - Environment Variables Template
# Copy this file to .env.local and fill in the values

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Local Development
VITE_API_BASE_URL=http://localhost:8000

# Azure Functions (Production)
# VITE_API_BASE_URL=https://vigor-backend.azurewebsites.net/api

# =============================================================================
# MICROSOFT ENTRA ID AUTHENTICATION
# =============================================================================
VITE_AZURE_AD_CLIENT_ID=be183263-80c3-4191-bc84-2ee3c618cbcd
VITE_AZURE_AD_TENANT_ID=common
VITE_AZURE_AD_AUTHORITY=https://login.microsoftonline.com/common

# Redirect URI (set based on your deployment)
VITE_REDIRECT_URI=http://localhost:5173

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_PWA=false
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_GUEST_MODE=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
VITE_APP_NAME=Vigor
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VITE_APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxx
