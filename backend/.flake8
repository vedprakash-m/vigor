[flake8]
max-line-length = 88
extend-ignore = E203,E501,W503,F401
# F811: Allow parameter redefinition in different class constructors
per-file-ignores =
    core/llm_orchestration/adapters.py:F811
    core/llm_orchestration/gateway.py:F811
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    .eggs,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    migrations
max-complexity = 10
