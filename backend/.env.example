# Vigor Backend - Environment Variables Template
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (Local Development)
DATABASE_URL=sqlite:///./vigor.db

# PostgreSQL (Production Alternative)
# DATABASE_URL=postgresql://user:password@localhost:5432/vigor

# Cosmos DB (Azure Production)
# COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
# COSMOS_DB_KEY=your-cosmos-db-primary-key
# COSMOS_DB_DATABASE=vigor_db

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# Gemini Flash 2.5 (Primary LLM Provider)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash

# OpenAI (Fallback - Optional)
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_MODEL=gpt-4o-mini

# Perplexity (Fallback - Optional)
# PERPLEXITY_API_KEY=your-perplexity-api-key
# PERPLEXITY_MODEL=llama-3.1-sonar-small-128k-online

# LLM Provider Selection
LLM_PROVIDER=gemini
AI_MONTHLY_BUDGET=50
AI_COST_THRESHOLD=40

# =============================================================================
# AUTHENTICATION (Microsoft Entra ID)
# =============================================================================
AZURE_AD_CLIENT_ID=be183263-80c3-4191-bc84-2ee3c618cbcd
AZURE_AD_TENANT_ID=common
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/common

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Vigor
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# AZURE SERVICES (Production)
# =============================================================================
# Key Vault
# AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Application Insights
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxx;IngestionEndpoint=xxx

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Free Tier Quotas (per month)
FREE_TIER_WORKOUT_PLANS=5
FREE_TIER_AI_CHATS=10
