# Vigor Azure Functions - Environment Variables Template
# For local development, copy to local.settings.json Values section
# For Azure deployment, configure in Function App Application Settings

# =============================================================================
# COSMOS DB CONFIGURATION
# =============================================================================
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-primary-key
COSMOS_DB_DATABASE=vigor_db

# =============================================================================
# AI CONFIGURATION (Gemini Flash 2.5)
# =============================================================================
GOOGLE_AI_API_KEY=your-gemini-api-key
AI_PROVIDER=gemini-flash-2.5
AI_MONTHLY_BUDGET=50
AI_COST_THRESHOLD=40

# =============================================================================
# AUTHENTICATION
# =============================================================================
AZURE_CLIENT_ID=be183263-80c3-4191-bc84-2ee3c618cbcd
AZURE_TENANT_ID=common
JWT_SECRET_KEY=your-super-secret-jwt-key

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_FREE_TIER=20
RATE_LIMIT_PREMIUM_TIER=100
RATE_LIMIT_ADMIN_TIER=1000

# =============================================================================
# AZURE FUNCTIONS SETTINGS (Automatically set in Azure)
# =============================================================================
# AzureWebJobsStorage=DefaultEndpointsProtocol=https;AccountName=...
# FUNCTIONS_WORKER_RUNTIME=python
# FUNCTIONS_EXTENSION_VERSION=~4
